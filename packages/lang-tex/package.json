{
  "name": "lang-tex",
  "version": "0.0.3",
  "description": "TeX extension for CodeMirror 6",
  "keywords": [
    "tex",
    "codemirror",
    "codemirror6",
    "latex",
    "cm6",
    "cm",
    "language"
  ],
  "author": "mu.io <dev@mathematic.io>",
  "homepage": "https://github.com/mu-io/codemirror-tex",
  "license": "GPL-3.0-or-later",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mu-io/codemirror-tex.git"
  },
  "scripts": {
    "clean": "yarn clean:ts && yarn clean:artifacts",
    "clean:artifacts": "rm -rf lib",
    "clean:ts": "tsc -b tsconfig.build.json --clean",
    "start": "webpack serve",
    "build": "tsc -b tsconfig.build.json",
    "lint:spelling": "cspell --config=../../.cspellrc.json \"**/*.{md,ts,js}\"",
    "lint:es": "eslint ./src --ext .js,.ts",
    "lint:ts": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^4.5.0",
    "ts-loader": "^8.0.5",
    "typescript": "^4.0.3",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@codemirror/next": "^0.13.1",
    "lezer-tex": "0.0.0-6"
  },
  "peerDependencies": {
    "lezer": "^0.13.1"
  },
  "bugs": {
    "url": "https://github.com/mu-io/codemirror-tex/issues"
  }
}